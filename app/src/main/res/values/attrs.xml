<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GlobalAttrDeclare">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />

        <attr name="focusBorderColor" format="color" />

        <attr name="data" format="string" />

        <attr name="backgroundColorNormalGradientStart" format="color" />
        <attr name="backgroundColorNormalGradientEnd" format="color" />

    </declare-styleable>


    <declare-styleable name="RoundButton">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />

        <attr name="borderColorDisable" format="color" />
        <attr name="borderColorNormal" format="color" />
        <attr name="borderColorHighlight" format="color" />

        <attr name="backgroundColorDisable" format="color" />
        <attr name="backgroundColorNormal" format="color" />
        <attr name="backgroundColorHighlight" format="color" />

        <attr name="textColorDisable" format="color" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorHighlight" format="color" />

        <attr name="backgroundColorNormalGradientStart" />
        <attr name="backgroundColorNormalGradientEnd" />

    </declare-styleable>


    <declare-styleable name="ToolBar">

        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarBottomWidth" format="dimension" />
        <attr name="toolbarLeftSrc" format="reference|color" />
        <attr name="toolbarRightSrc" format="reference|color" />
        <attr name="toolbarLeftTitle" format="string" />
        <attr name="toolbarRightTitle" format="string" />
        <attr name="toolbarTitleBold" format="boolean" />

    </declare-styleable>

    <declare-styleable name="BottomBar">

        <attr name="bottomBarTextOnColor" format="color" />
        <attr name="bottomBarTextOffColor" format="color" />

        <attr name="bottomBarLeftSrcOn" format="reference|color" />
        <attr name="bottomBarLeftSrcOff" format="reference|color" />
        <attr name="bottomBarMiddleSrcOn" format="reference|color" />
        <attr name="bottomBarMiddleSrcOff" format="reference|color" />
        <attr name="bottomBarRightSrcOn" format="reference|color" />
        <attr name="bottomBarRightSrcOff" format="reference|color" />

        <attr name="bottomBarLeftText" format="string" />
        <attr name="bottomBarMiddleText" format="string" />
        <attr name="bottomBarRightText" format="string" />

    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tabBarIndicatorColor" format="color" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" />
        <attr name="borderColor" />
    </declare-styleable>

    <declare-styleable name="DotView">

        <attr name="dotColor" format="color" />

    </declare-styleable>

    <declare-styleable name="ShadowView">
        <attr name="start" format="color" />
        <attr name="end" format="color" />
        <attr name="direction">
            <flag name="TOP_BOTTOM" value="0x0001" />
            <flag name="TR_BL" value="0x0002" />
            <flag name="BR_TL" value="0x0003" />
            <flag name="BOTTOM_TOP" value="0x0004" />
            <flag name="BL_TR" value="0x0005" />
            <flag name="LEFT_RIGHT" value="0x0006" />
            <flag name="TL_BR" value="0x0007" />
        </attr>

    </declare-styleable>

    <declare-styleable name="RoundRelativeLayout">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="backgroundColor" />

        <attr name="backgroundColorNormalGradientStart" />
        <attr name="backgroundColorNormalGradientEnd" />

    </declare-styleable>

    <declare-styleable name="RoundEditText">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="backgroundColor" />
        <attr name="focusBorderColor" />


    </declare-styleable>

    <declare-styleable name="ActionEditText">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="backgroundColor" />
        <attr name="focusBorderColor" />


    </declare-styleable>


    <declare-styleable name="FontTextView">

        <attr name="themeTextColor" format="color" />
        <attr name="typefaceStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="medium" value="5" />
            <enum name="semibold" value="6" />
        </attr>

        <attr name="underLine">
            <enum name="NoLine" value="0" />
            <enum name="Line" value="1" />
        </attr>


    </declare-styleable>

    <declare-styleable name="BarcodeFrameView" >
        <attr name="borderWidth" />
        <attr name="borderColor" />
    </declare-styleable>


</resources>