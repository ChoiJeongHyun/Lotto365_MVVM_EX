<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="kr.co.example.lotto365_mvvm.miniframework.database.entity.History" />

        <variable
            name="vm"
            type="kr.co.example.lotto365_mvvm.views.p4_history_number.HistoryNumberViewModel" />

        <variable
            name="position"
            type="Integer" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_view_text_history_number_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="2020년 05월 20일"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:visibility="gone"
            app:allItems="@{vm.historyItems}"
            app:listPosition="@{position}"
            />

        <kr.co.example.lotto365_mvvm.widgets.RoundRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/item_view_text_history_number_date"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            app:backgroundColor="@color/box_background_color"
            app:cornerRadius="8dp">

            <kr.co.example.lotto365_mvvm.widgets.RoundRelativeLayout
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:backgroundColor="#F0F0F0"
                app:cornerRadius="8dp">

                <TextView
                    android:id="@+id/item_view_text_history_number_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{item.type.toString().equals(`Random`) ? `랜덤생성` : `꿈생성`}"
                    android:textColor="#007AFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </kr.co.example.lotto365_mvvm.widgets.RoundRelativeLayout>

            <kr.co.example.lotto365_mvvm.widgets.RoundButton
                android:id="@+id/item_view_btn_history_number"
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:text="삭제"
                android:textSize="20dp"
                app:backgroundColorNormal="#4B46BE"
                app:cornerRadius="16dp"
                app:onClickListener="@{()->vm.historyRemove(item.uniqueId)}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/item_view_btn_history_number">

                <TextView
                    android:id="@+id/item_view_text_history_number_number1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[0]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[0]}" />

                <TextView
                    android:id="@+id/item_view_text_history_number_number2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[1]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[1]}" />

                <TextView
                    android:id="@+id/item_view_text_history_number_number3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[2]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[2]}" />

                <TextView
                    android:id="@+id/item_view_text_history_number_number4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[3]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[3]}" />

                <TextView
                    android:id="@+id/item_view_text_history_number_number5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[4]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[4]}" />

                <TextView
                    android:id="@+id/item_view_text_history_number_number6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{item.numbers[5]}"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    app:isNumber="@{item.numbers[5]}" />


            </LinearLayout>


        </kr.co.example.lotto365_mvvm.widgets.RoundRelativeLayout>

    </RelativeLayout>

</layout>